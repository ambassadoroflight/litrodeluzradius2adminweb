<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet-mapping>
        <servlet-name>ImagesServlet</servlet-name>
        <url-pattern>/ImagesServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <listener>
        <description>Prepares the connection to the database.</description>
        <listener-class>web.connection.ApplicationDAOListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>FrameworkFilesServlet</servlet-name>
        <servlet-class>net.comtor.framework.servlet.FrameworkFilesServlet</servlet-class>
        <init-param>
            <description>Ruta por defecto a los recursos estÃ¡ticos.</description>
            <param-name>projectFilesPackage</param-name>
            <param-value>web.files</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ImagesServlet</servlet-name>
        <servlet-class>org.unlitrodeluzcolombia.radius.servlet.ImagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrameworkFilesServlet</servlet-name>
        <url-pattern>/htmladvanced/*</url-pattern>
        <url-pattern>/framework/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AjaxServlet</servlet-name>
        <servlet-class>net.comtor.framework.servlet.AjaxServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjaxServlet</servlet-name>
        <url-pattern>/AjaxServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>net.comtor.framework.report.AuthenticatedReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/ReportServlet</url-pattern>
    </servlet-mapping>
</web-app>
